<!--        <item name="cardUseCompatPadding">true</item>-->
<!--        <item name="cardBackgroundColor">@color/cardBackground</item>-->
<!--    </style>-->

    <!-- CheckBox Style -->
    <style name="CheckBoxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ProgressBar Style -->
    <style name="ProgressBarStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Dialog Styles -->
    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Password Strength Text Styles -->
    <style name="PasswordStrengthWeak" parent="CaptionText">
        <item name="android:textColor">@color/passwordWeak</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PasswordStrengthMedium" parent="CaptionText">
        <item name="android:textColor">@color/passwordMedium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PasswordStrengthStrong" parent="CaptionText">
        <item name="android:textColor">@color/passwordStrong</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Footer Text Style -->
    <style name="FooterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>